@model IEnumerable<BookStore.Models.Book>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 col-xl-3">
                <div class="rounded position-relative product-item mb-4">
                    <div class="product-img">
                        <img src="@item.HinhSach" class="img-fluid w-100 rounded-top" alt="@item.NameBook">
                    </div>
                    <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">
                        @item.Category.NameCate
                    </div>
                    <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                        <h4>@item.NameBook</h4>
                        <p>@item.BookDescrip ?? "Mô tả chưa có sẵn."</p>
                        <div class="d-flex justify-content-between flex-lg-wrap">
                            <p class="text-dark fs-5 fw-bold mb-0">@String.Format("{0:C}", item.GIA)</p>
                            <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary">
                                <i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Không có sản phẩm nào để hiển thị.</p>
}
