@model IEnumerable<BookStore.Models.Category>

@if (Model != null && Model.Any())
{
    <div class="col-lg-8 text-end">
        <ul class="nav nav-pills d-inline-flex text-center mb-5" id="categoryList">
            @for (int i = 0; i < Model.Count(); i++)
            {
                var item = Model.ElementAt(i);

                // Show the first three items as tabs
                if (i < 3)
                {
                    <li class="nav-item">
                        <a class="d-flex m-2 py-2 rounded-pill category-tab" data-bs-toggle="pill" href="@item.NameCate">
                            <span class="text-dark" style="width: 130px;">@item.NameCate</span>
                        </a>
                    </li>
                }
                else
                {
                    // Add remaining items to a hidden dropdown list
                    <li class="nav-item d-none extra-category">
                        <a class="dropdown-item" data-bs-toggle="pill" href="@item.NameCate">
                            <span class="text-dark">@item.NameCate</span>
                        </a>
                    </li>
                }
            }
        </ul>

        <!-- Dropdown for extra items -->
        <div class="dropdown d-inline-block" id="extraCategoryDropdown" style="display: none;">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                More Categories
            </button>
            <ul class="dropdown-menu dropdown-menu-end" id="extraCategoryList">
                <!-- Extra categories will be shown here -->
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var item = Model.ElementAt(i);

                    // Show the first three items as tabs
                    if (i > 3)
                    {
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 category-tab" data-bs-toggle="pill" href="@item.NameCate">
                                <span class="text-dark" style="width: 130px;">@item.NameCate</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        // Add remaining items to a hidden dropdown list
                        <li class="nav-item d-none extra-category">
                            <a class="dropdown-item" href="#tab-@item.NameCate">
                                <span class="text-dark">@item.NameCate</span>
                            </a>
                        </li>
                    }
                }
                </ul>
        </div>
    </div>
}
