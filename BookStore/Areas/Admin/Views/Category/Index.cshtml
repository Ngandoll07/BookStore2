@using BookStore.Models
@using PagedList.Mvc;
@model PagedList.PagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding: 0;
        margin-top: 20px;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a,
            .pagination li span {
                padding: 8px 12px;
                text-decoration: none;
                color: #007bff;
                border: 1px solid #ddd;
                border-radius: 4px;
                transition: background-color 0.3s ease;
            }

                .pagination li a:hover,
                .pagination li span:hover {
                    background-color: #007bff;
                    color: white;
                }

            .pagination li.active span {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

            .pagination li.disabled span {
                color: #6c757d;
                cursor: not-allowed;
                background-color: #e9ecef;
                border-color: #ddd;
            }
</style>
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Quản lý danh mục sách </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/category/index">Quản lý danh mục</a></li>
                <li class="breadcrumb-item active" aria-current="page">Danh mục</li>
            </ol>
        </nav>
    </div>
    <p>
        <a href="@Url.Action("Create", "Category")" class="btn btn-primary">Create New</a>
    </p>

    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Id danh mục</th>
                    <th>Loại</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    var i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.ID</td>
                            <td>@item.NameCate</td>
                            <td>
                                <a href="/admin/category/edit/@item.ID" class="btn btn-sm btn-primary">Sửa</a>
                                <a href="/admin/category/Delete/@item.ID" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa');">Xóa</a>

                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">Không có bản ghi nào</td>
                    </tr>
                }
            </tbody>

        </table>
        <div>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>
    </div>
    <!--/.card-body-->
    <div class="card-footer">
    </div>
    <!--/.card-footer-->
</div>


