@model BookStore.Models.Category
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Chỉnh sửa danh mục</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/category/index">Danh mục</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa</li>
            </ol>
        </nav>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin danh mục</h3>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "Category", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(x => x.ID) <!-- Use a hidden field for the ID -->

                    <div class="form-group">
                        <label for="NameCate">Tên loại</label>
                        @Html.TextBoxFor(x => x.NameCate, new { @class = "form-control", @placeholder = "Tên danh mục" })
                        @Html.ValidationMessageFor(x => x.NameCate, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <a href="/admin/category" class="btn btn-danger">Quay lại</a>
                        <button type="submit" class="btn btn-success mr-2">Lưu lại</button> <!-- Updated button text -->
                    </div>
                }
            </div>
        </div>
    </div>
</div>


